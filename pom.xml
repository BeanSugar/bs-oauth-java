<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.beansugar.oauth</groupId>
	<artifactId>bs-oauth-java</artifactId>
	<version>bs-oauth-201612-1-BUILD-SNAPSHOT</version>

	<name>BS OAuth library</name>
	<url>https://github.com/BeanSugar/bs-oauth-java</url>
	<description>OAuth library 만들어보는중.</description>
	<packaging>pom</packaging>

	<modules>
		<module>oauth-client</module>
	</modules>

	<properties>
		<java-version>1.7</java-version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<org.beansugar.tools-version>tools-201612-1-BUILD-SNAPSHOT</org.beansugar.tools-version>
	</properties>

	<scm>
		<connection>scm:https://github.com/BeanSugar/bs-oauth-java.git</connection>
		<developerConnection>scm:https://github.com/BeanSugar/bs-oauth-java.git</developerConnection>
		<url>https://github.com/BeanSugar/bs-oauth-java</url>
	</scm>

	<distributionManagement>
		<repository>
			<id>beansugar-public-release</id>
			<url>http://nexus.beansugar.org/content/repositories/public-release</url>
		</repository>
		<snapshotRepository>
			<id>beansugar-public-snapshot</id>
			<url>http://nexus.beansugar.org/content/repositories/public-snapshot</url>
		</snapshotRepository>
	</distributionManagement>

	<dependencies>
		<dependency>
			<groupId>org.beansugar.tools</groupId>
			<artifactId>bs-tools-core</artifactId>
			<version>${org.beansugar.tools-version}</version>
		</dependency>
		<dependency>
			<groupId>org.beansugar.tools</groupId>
			<artifactId>bs-tools-collection</artifactId>
			<version>${org.beansugar.tools-version}</version>
		</dependency>

		<!-- commons -->
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
			<version>1.4</version>
			<scope>compile</scope>
			<optional>true</optional>
		</dependency>
		<!-- gson,json -->
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<version>2.6.2</version>
		</dependency>

		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.5.2</version>
		</dependency>

		<dependency>
			<groupId>joda-time</groupId>
			<artifactId>joda-time</artifactId>
			<version>2.9.2</version>
		</dependency>

		<!-- project lombok -->
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<version>1.16.12</version>
			<scope>provided</scope>
		</dependency>


		<!-- logging -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.7</version>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-classic</artifactId>
			<version>1.1.3</version>
		</dependency>
		<dependency>
			<groupId>ch.qos.logback</groupId>
			<artifactId>logback-core</artifactId>
			<version>1.1.3</version>
		</dependency>

		<dependency>
			<groupId>io.netty</groupId>
			<artifactId>netty-all</artifactId>
			<version>4.1.6.Final</version>
			<scope>test</scope>
		</dependency>

		<!-- test -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<source>${java-version}</source>
					<target>${java-version}</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
